<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="2dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp">

    <TextView
        android:id="@+id/lblAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/message_other_inverse_shape"
        android:gravity="center"
        android:scaleType="centerInside"
        android:text="aa"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/lblMessage"
        android:background="@drawable/message_other_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginLeft="5dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="@string/message_body"
        android:layout_toRightOf="@id/lblAvatar"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/lblUserName"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="2dp"
        android:textSize="11dp"
        android:text="@string/message_author"
        android:layout_below="@+id/lblMessage"
        android:layout_alignLeft="@id/lblMessage"
        android:ellipsize="marquee" />

    <TextView
        android:id="@+id/lblChatSentAt"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblMessage"
        android:layout_alignRight="@id/lblMessage"
        android:elevation="2dp"
        android:text="@string/message_date"
        android:textSize="11dp"
        android:textAlignment="textEnd"
        android:gravity="end" />
</RelativeLayout>