<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="2dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp">

    <TextView
        android:id="@+id/lblAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:scaleType="centerInside"
        android:text="aa"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/lblMessage"
        android:background="@drawable/message_other_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginLeft="15dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="Corpo da mensagem"
        android:layout_toRightOf="@id/lblAvatar"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/lblUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblMessage"
        android:elevation="2dp"
        android:padding="2dp"
        android:text="Autor da mensagem"
        android:textColor="#BBB"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lblChatSentAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblUserName"
        android:elevation="2dp"
        android:text="Data da mensagem"
        android:textColor="#BBB"
        android:textStyle="italic|bold" />
</RelativeLayout>