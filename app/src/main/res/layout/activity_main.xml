<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="7dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblMainHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Trabalho 11 - Chat"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/lblMainDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblMainHeader"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Para continuar, insira suas credenciais abaixo..."
        android:textAlignment="center" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtNome_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblMainDescription"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="7dp"
        android:enabled="false"
        android:hint="Nome de usuÃ¡rio">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtEmail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNome_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="7dp"
        android:enabled="false"
        android:hint="E-mail">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cbAutoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectar automaticamente"
        android:layout_below="@id/txtEmail_layout"
        android:enabled="false"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cbAutoLogin"
        android:enabled="false"
        android:text="Registrar" />

    <TextView
        android:id="@+id/lblAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEntrar"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Projeto criado por Gabriel Oliveira Brito, Cristiane Vilela de Azevedo, Carina Carla da Costa, Mateus Augusto Galieta Cruz, Pedro Henrique Ferreira Lemos"
        android:textAlignment="center"
        android:textStyle="bold" />
</RelativeLayout>